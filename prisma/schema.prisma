// prisma/schema.prisma

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"] // Use square brackets for an array
}

model Category {
  id            String    @id @default(uuid()) 
  name          String
  companions    Companion[]
}

model Companion {
  id            String    @id @default(uuid()) // Fix typo in @default
  userId        String
  userName      String
  src           String
  name          String    @db.Text
  description   String    // Fix typo in 'description'
  instructions  String    @db.Text
  seed          String    @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt // Fix typo in 'updatedAt'

  category      Category  @relation(fields: [categoryId], references: [id])
  categoryId    String
  @@index([categoryId])
  @@fulltext([name]) // Fix typo in '@@fulltext'
}
